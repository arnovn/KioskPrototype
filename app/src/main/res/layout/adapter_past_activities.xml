<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="90"
    android:background="@drawable/whitebuttonshape">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="56dp"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/bike" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/bikeTypeViewPA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratmedium"
                android:text="Bike type"
                android:textColor="@color/darkGreen"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/startDateViewPA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratitalic"
                android:text="date"
                android:textColor="@color/darkGreen"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="@font/montserratmedium"
                android:text="Time driven"
                android:textColor="@color/darkGreen"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/timeViewPA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="@font/montserratmedium"
                android:text="Time driven"
                android:textColor="@color/darkGreen"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
            android:id="@+id/tobePaidTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:fontFamily="@font/montserratmedium"
            android:gravity="center"
            android:text="Cost"
            android:textColor="@color/darkGreen"
            android:textSize="18dp" />

            <TextView
                android:id="@+id/tobePaidViewPA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="@font/montserratmedium"
                android:gravity="center"
                android:text="Price"
                android:textColor="@color/darkGreen"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="@font/montserratmedium"
                android:gravity="center"
                android:text="Payed"
                android:textColor="@color/darkGreen"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/payedViewPA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="@font/montserratmedium"
                android:gravity="center"
                android:text="Price"
                android:textColor="@color/darkGreen"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>