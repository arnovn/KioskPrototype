<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAndRegister.RegisterStandard"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratmedium"
        android:text="REGISTER"
        android:textColor="@color/darkGreen"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/customshape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/nameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/homescreenbuttonshape"
                android:fontFamily="@font/montserratmedium"
                android:paddingLeft="20dp"
                android:text="Full name:"
                android:textColor="@color/darkGreen"
                android:textFontWeight="1"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_weight="1"
                android:background="@drawable/homescreenbuttonshape"
                android:ems="10"
                android:fontFamily="@font/montserratitalic"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:hint="Name"
                android:textColor="@color/darkGreen"
                android:textFontWeight="2"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/EmailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_weight="1"
                android:background="@drawable/homescreenbuttonshape"
                android:fontFamily="@font/montserratmedium"
                android:paddingLeft="20dp"
                android:text="E-mail address:"
                android:textColor="@color/darkGreen"
                android:textFontWeight="1"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editEmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_weight="1"
                android:background="@drawable/homescreenbuttonshape"
                android:ems="10"
                android:fontFamily="@font/montserratitalic"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:hint="Input Email"
                android:textColor="@color/darkGreen"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/phoneView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_weight="1"
                android:background="@drawable/homescreenbuttonshape"
                android:fontFamily="@font/montserratmedium"
                android:paddingLeft="20dp"
                android:text="Phonenumber:"
                android:textColor="@color/darkGreen"
                android:textFontWeight="1"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editPhoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_weight="1"
                android:background="@drawable/homescreenbuttonshape"
                android:ems="10"
                android:fontFamily="@font/montserratitalic"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:hint="Number"
                android:textColor="@color/darkGreen"
                android:textFontWeight="2"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/registerButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.125" />

</androidx.constraintlayout.widget.ConstraintLayout>