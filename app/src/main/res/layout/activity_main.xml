<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/customshape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <TextView
                android:id="@+id/rentabiketext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="30dp"
                android:fontFamily="@font/montserratmedium"
                android:text="RENT A BIKE"
                android:textColor="@color/darkGreen"
                android:textSize="20dp"
                android:translationZ="10dp" />

            <TextView
                android:id="@+id/rentabiketext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="120dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Rent one of WOW-solutions electricbikes \n Fast, easy and safe"
                android:textColor="@color/darkGreen"
                android:textSize="12dp"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/rentabikebutton"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/homescreenbuttonshape"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/darkGreen"
                android:translationZ="1dp" />

            <ImageView
                android:id="@+id/bikeImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginVertical="50dp"
                android:translationZ="10dp"
                app:srcCompat="@drawable/bike" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="168dp">

            <TextView
                android:id="@+id/poitext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="30dp"
                android:fontFamily="@font/montserratmedium"
                android:text="POINTS OF INTEREST"
                android:textColor="@color/darkGreen"
                android:textSize="20dp"
                android:translationZ="10dp" />

            <TextView
                android:id="@+id/poitext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="120dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Looking for somewhere to go?\nFind out here for places to vist, eat, etc."
                android:textColor="@color/darkGreen"
                android:textSize="12dp"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/poibutton"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/homescreenbuttonshape"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/darkGreen"
                android:translationZ="1dp" />

            <ImageView
                android:id="@+id/poiImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginVertical="50dp"
                android:translationZ="10dp"
                app:srcCompat="@drawable/activities" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="168dp">

            <TextView
                android:id="@+id/paytext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="30dp"
                android:fontFamily="@font/montserratmedium"
                android:text="PAY FOR SERVICES"
                android:textColor="@color/darkGreen"
                android:textSize="20dp"
                android:translationZ="10dp" />

            <TextView
                android:id="@+id/paytext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="120dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Haven't been able to pay for last ride?\nWant to add credits to your account?"
                android:textColor="@color/darkGreen"
                android:textSize="12dp"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/paybutton"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/homescreenbuttonshape"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/darkGreen"
                android:translationZ="1dp" />

            <ImageView
                android:id="@+id/payImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginVertical="50dp"
                android:translationZ="10dp"
                app:srcCompat="@drawable/image" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="188dp">

            <TextView
                android:id="@+id/settingstext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="30dp"
                android:fontFamily="@font/montserratmedium"
                android:text="ACCOUNT SETTINGS"
                android:textColor="@color/darkGreen"
                android:textSize="20dp"
                android:translationZ="10dp" />

            <TextView
                android:id="@+id/settingstext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="120dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Request a membership card, add a fingerprint.\nLook at past transactions or add account credits."
                android:textColor="@color/darkGreen"
                android:textSize="12dp"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/settingsbutton"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/homescreenbuttonshape"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/darkGreen"
                android:translationZ="1dp" />

            <ImageView
                android:id="@+id/settingsImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginVertical="50dp"
                android:translationZ="10dp"
                app:srcCompat="@drawable/bike" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratmedium"
        android:text="HOMESCREEN"
        android:textColor="@color/darkGreen"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />


</androidx.constraintlayout.widget.ConstraintLayout>