<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAndRegister.RegistrationGoogle"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratmedium"
        android:text="GOOGLE SIGN IN"
        android:textColor="@color/darkGreen"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/customshape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/homescreenbuttonshape"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="80dp">

            <TextView
                android:id="@+id/googleTitleView"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/darkGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="Login with Google devices:" />

            <TextView
                android:id="@+id/googleInfoView"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/darkGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go to following site with your smartphone\n and follow the instructions:" />

            <TextView
                android:id="@+id/googleViewUrl"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/montserratlight1"
                android:textColor="@color/linkColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Link" />

            <TextView
                android:id="@+id/codeInfoView"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:gravity="center"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/darkGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insert follwing code:" />

            <TextView
                android:id="@+id/codeViewGoogle"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/whitebuttonshape"
                android:paddingVertical="20dp"
                android:layout_marginHorizontal="80dp"
                android:layout_marginBottom="20dp"
                android:textSize="24dp"
                android:gravity="center"
                android:fontFamily="@font/montserratlight1"
                android:textColor="@color/darkGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The code" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>